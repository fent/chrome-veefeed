{
  "manifest_version": 2,
  "name": "veefeed",
  "version": "0.5.1",
  "description": "Keep track of your YouTube and Twitch subscriptions",
  "icons": {
    "128": "img/icon-128.png"
  },
  "permissions": [
    "https://www.twitch.tv/directory/following/videos",
    "https://api.twitch.tv/*",
    "https://static-cdn.jtvnw.net/v1/AUTH_system/*",
    "https://www.youtube.com/feed/subscriptions",
    "https://www.youtube.com/get_video_info?*",
    "https://i.ytimg.com/vi/*/hqdefault.jpg?*",
    "https://i.ytimg.com/vi/*/mqdefault.jpg?*",
    "http://haloruns.com/records?recent",
    "http://www.speedrun.com/settings",
    "http://www.speedrun.com/api/v1/*",
    "contextMenus",
    "cookies",
    "notifications",
    "storage"
  ],
  "author": "fent (https://github.com/fent)",
  "background": {
    "scripts": [
      "background/util.js",
      "background/sources.js",
      "background/background.js"
    ]
  },
  "content_scripts": [
    { "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["util/util.js", "content/shared.js", "content/youtube.js"],
      "css": ["content/style.css"] },
    { "matches": ["https://www.twitch.tv/*/v/*"],
      "js": ["util/util.js", "content/shared.js", "content/twitch.js"],
      "css": ["content/style.css"] }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}
